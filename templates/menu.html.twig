{% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">        
        <a class="navbar-brand" href="#">Menu</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span></button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
            
                {% if (element is defined and is_granted('ROLE_ADMIN')) %}
                

                <li class="nav-item {% if((element!='User') and (element!='Category') and (element!='Product') and (element!='Supplier')) %} active {% endif %}">
                <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>

                <li class="nav-item dropdown {% if(element=='User') %} active {% endif %}">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                User
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="{{ path('user_security_new') }}">Add User</a>
                <a class="dropdown-item" href="{{ path('user_list') }}">User List</a>
                </li>

               

                <li class="nav-item dropdown {% if(element=='Category') %} active {% endif %}">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Category</a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="{{ path('category_new') }}">Add Category</a>
                        <a class="dropdown-item" href="{{ path('category_list') }}">Category List</a>
                </li>

                <li class="nav-item dropdown {% if(element=='Supplier') %} active {% endif %}">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Supplier
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="{{ path('supplier_new') }}">Add Supplier</a>
                        <a class="dropdown-item" href="{{ path('supplier_list') }}">Supplier List</a>
                </li>

                <li class="nav-item dropdown {% if(element=='Product') %} active {% endif %}">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Product
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="{{ path('product_new') }}">Add Product</a>
                <a class="dropdown-item" href="{{ path('product_list') }}">Product List</a>
                </li>
                </ul>
                
                <a style="color:#fff" href="{{ path('user_security_logout') }}">
                Logout
                </a>
            
                {% endif %}
            
        </div>
    </nav>
{% endblock %}